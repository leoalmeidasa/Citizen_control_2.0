<%= simple_form_for @citizen do |form| %>
  <% if @citizen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(citizen.errors.count, "error") %> prohibited this citizen from being saved:</h2>

      <ul>
        <% @citizen.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <form>
      <h1><%= action_message %></h1>
      <div class="row">
        <div class="col-sm-4">
          <%= form.label :name, class: "col-sm-2 col-form-label" %>
          <%= form.input_field :name %>
        </div>

        <div class="col-sm-4">
          <%= form.label :cpf, class: "col-sm-2 col-form-label" %>
          <%= form.input_field :cpf, class: 'form-group' %>
        </div>


        <div class="col-sm-4">
          <%= form.label :cns, class: "col-sm-2 col-form-label" %>
          <%= form.input_field :cns, class: 'form-group' %>
        </div>

        <div class="col-sm-12">
          <%= form.label :birth_date, class: "col-sm-2 col-form-label" %>
          <%= form.date_field :birth_date, min: Date.new(1900, 01, 01), max: Date.today, class: 'form-group' %>
        </div>

        <div class="col-sm-4">
          <%= form.label :email, class: "col-sm-2 col-form-label" %>
          <%= form.input_field :email, placeholder: 'user@domain.com', class: 'form-group' %>
        </div>

        <div class="col-sm-4">
          <%= form.label :telephone, class: "col-sm-2 col-form-label" %>
          <%= form.input_field :telephone, class: 'form-group' %>
        </div>

        <div class="col-sm-2">
          <%= form.label :status, class: "col col-form-label" %>
          <%= form.check_box :status, class: 'form-group' %>
        </div>

        <div class="col-sm-6">
          <%= form.label :photo, class: "col-sm-2 col-form-label" %>
          <%= form.file_field :photo, class: 'form-group' %>
        </div>

        <div class="nested-fields">
          <%= form.fields_for :address do |address_form| %>
            <%= render "addresses/form", form: address_form %>
          <% end %>
        </div>

        <div class="col-sm-4">
          <%= link_to t('links.back'), citizens_path, class: 'btn btn-danger' %>
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </form>
  </div>
<% end %>
