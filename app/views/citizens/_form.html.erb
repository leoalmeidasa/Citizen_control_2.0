<%= simple_form_for @citizen do |form| %>
  <% if citizen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(citizen.errors.count, "error") %> prohibited this citizen from being saved:</h2>

      <ul>
        <% citizen.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Nome</label>
      <div class="col-sm-10">
        <%= form.input_field :name  %>
      </div>
    </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">CPF</label>
      <div class="col-sm-10">
        <%= form.input_field :cpf, class: 'form-group' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">CNS</label>
      <div class="col-sm-10">
        <%= form.input_field :cns, class: 'form-group' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <%= form.input_field :email, placeholder: 'user@domain.com', class: 'form-group' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Data de Nascimento</label>
      <div class="col-sm-10">
        <%= form.input_field :birth_date, as: :date, start_year: Date.today.year - 110,
                             end_year: Date.today.year - 12, order: [:year, :month, :day], class: 'form-group' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Telefone</label>
      <div class="col-sm-10">
        <%= form.input_field :telephone, class: 'form-group' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :status, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.check_box :status, class: 'form-group' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Foto</label>
      <div class="col-sm-10">
        <%= form.file_field :photo , class: 'form-group' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= link_to 'Voltar', citizens_path, class: 'btn btn-outline-warning' %>
        <%= form.submit class: 'btn btn-primary'%>
      </div>
    </div>
  </form>
<% end %>
