<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <button
        class="navbar-toggler"
        type="button"
        data-mdb-toggle="collapse"
        data-mdb-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-bars"></i>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link"><%= link_to 'Citizen', citizens_path %></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="p-3 text-left bg-gradient">
    <p id="notice"><%= notice %></p>
    <h1 class="mb-3">Addresses</h1>
  </div>
</header>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Cep</th>
      <th>Public place</th>
      <th>Complement</th>
      <th>District</th>
      <th>City</th>
      <th>Uf</th>
      <th>Ibge code</th>
      <th>Citizen</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @addresses.each do |address| %>
      <tr class="table-info">
        <td><%= address.CEP %></td>
        <td><%= address.public_place %></td>
        <td><%= address.complement %></td>
        <td><%= address.district %></td>
        <td><%= address.city %></td>
        <td><%= address.UF %></td>
        <td><%= address.IBGE_code %></td>
        <td><%= address.citizen.name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Address', new_address_path %>
