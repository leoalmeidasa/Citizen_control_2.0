<%= simple_form_for @address do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">CEP</label>
      <div class="col-sm-10">
        <%= form.input_field :CEP, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Rua</label>
      <div class="col-sm-10">
        <%= form.input_field :public_place, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Complemento</label>
      <div class="col-sm-10">
        <%= form.input_field :complement, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Bairro</label>
      <div class="col-sm-10">
        <%= form.input_field :district, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Cidade</label>
      <div class="col-sm-10">
        <%= form.input_field :city, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">UF</label>
      <div class="col-sm-10">
        <%= form.input_field :UF, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Código IBGE</label>
      <div class="col-sm-10">
        <%= form.input_field :IBGE_code, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Cidadão</label>
      <div class="col-sm-10">
        <%= form.collection_select(:citizen_id, Citizen.all, :id, :name, include_blank:false) %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= link_to 'Voltar', addresses_path, class: 'btn btn-outline-warning' %>
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </form>
<% end %>