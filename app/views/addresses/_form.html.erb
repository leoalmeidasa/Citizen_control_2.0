<%= form_with(model: address) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group row">
      <%= form.label :CEP, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :CEP, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :public_place, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :public_place, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :complement, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :complement, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :district, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :district, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :city, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :city, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :UF, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :UF, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :IBGE_code, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :IBGE_code, class: 'form-group'  %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :citizen_id, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.collection_select(:citizen_id, Citizen.all, :id, :name, include_blank:true) %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= link_to 'Back', addresses_path, class: 'btn btn-outline-warning' %>
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </form>
<% end %>